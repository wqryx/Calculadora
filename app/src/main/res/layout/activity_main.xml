<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/mostrarPantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="0"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mostrarPantalla"
        android:columnCount="4"
        android:paddingTop="10dp">
        <Button android:id="@+id/boton1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1"/>
        <Button android:id="@+id/boton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2"/>
        <Button android:id="@+id/boton3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3"/>
        <Button android:id="@+id/botonSuma" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+"/>
        <Button android:id="@+id/boton4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4"/>
        <Button android:id="@+id/boton5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5"/>
        <Button android:id="@+id/boton6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6"/>
        <Button android:id="@+id/botonResta" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        <Button android:id="@+id/boton7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7"/>
        <Button android:id="@+id/boton8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8"/>
        <Button android:id="@+id/boton9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9"/>
        <Button android:id="@+id/botonMultiplicacion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ร"/>
        <Button android:id="@+id/boton0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
        <Button android:id="@+id/botonBorrar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="C"/>
        <Button android:id="@+id/botonIgual" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="="/>
        <Button android:id="@+id/botonDivision" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="รท"/>
    </GridLayout>
</RelativeLayout>